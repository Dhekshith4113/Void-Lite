<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VoidLite" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Global text color -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="textColorPrimary">@color/textColorPrimary</item>
        <!-- Optional background color -->
        <item name="android:windowBackground">@color/backgroundColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Apply default font family -->
<!--        <item name="android:fontFamily">@font/minima_font_family</item>-->
        <!-- Default font size for all body text -->
        <item name="textAppearanceBody1">@style/AppBaseText</item>
    </style>
</resources>